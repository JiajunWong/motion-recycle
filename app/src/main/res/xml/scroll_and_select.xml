<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/headerCollapseTransition"
        motion:constraintSetStart="@id/profileExpanded"
        motion:constraintSetEnd="@id/profileCollapsed">

        <OnSwipe
            motion:touchAnchorId="@id/motion_header"
            motion:touchAnchorSide="bottom"
            motion:dragDirection="dragUp" />

    </Transition>

    <Transition
        android:id="@+id/likePhoto"
        motion:constraintSetStart="@id/profileExpanded"
        motion:constraintSetEnd="@id/likedPhoto"
        motion:duration="400"
        motion:interpolator="cubic(0.0,0.7,0.2,1.0)"
        >

        <KeyFrameSet>
            <KeyAttribute motion:target="@id/motion_photo_view" motion:framePosition="0" android:alpha="1" />
        </KeyFrameSet>

    </Transition>

    <Transition
        android:id="@+id/cancelLikingPhoto"
        motion:constraintSetStart="@id/likedPhoto"
        motion:constraintSetEnd="@id/profileExpanded"
        motion:duration="400"
        motion:interpolator="cubic(0.0,0.3,0.2,1.0)"
        >

        <KeyFrameSet>
            <KeyAttribute motion:target="@id/motion_photo_view" motion:framePosition="100" android:alpha="1" />
            <KeyAttribute motion:target="@id/comment_bubble" motion:framePosition="100" android:alpha="0" android:scaleX="1" android:scaleY="1" android:translationY="64dp" />
            <KeyAttribute motion:target="@id/send_like_button" motion:framePosition="100" android:alpha="0" android:scaleX="1" android:scaleY="1" />
            <KeyAttribute motion:target="@id/cancel_button" motion:framePosition="100" android:alpha="0" android:scaleX="1" android:scaleY="1" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/profileExpanded">
        <Constraint
            android:id="@id/motion_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:progress="0" />
        <Constraint
            android:id="@id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toBottomOf="@id/motion_header"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:id="@id/motion_photo_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="104dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="0"
            />
        <Constraint
            android:id="@id/like_blur"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/grayLight"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0"
            />
        <Constraint
            android:id="@id/liked_subject_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            />
        <Constraint
            android:id="@id/comment_bubble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            motion:layout_constraintBottom_toBottomOf="@id/motion_photo_view"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="0"
            />
        <Constraint
            android:id="@id/send_like_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:scaleY="0.5"
            android:scaleX="0.5"
            motion:layout_constraintTop_toBottomOf="@id/motion_photo_view"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="-1"
            />
        <Constraint
            android:id="@id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:scaleY="0.5"
            android:scaleX="0.5"
            motion:layout_constraintTop_toBottomOf="@id/send_like_button"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="-1"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/profileCollapsed">
        <Constraint
            android:id="@id/motion_header"
            android:layout_width="0dp"
            android:layout_height="56dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:progress="1" />
        <Constraint
            android:id="@id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toBottomOf="@id/motion_header"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:id="@id/motion_photo_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="104dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="0"
            />
        <Constraint
            android:id="@id/like_blur"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/grayLight"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0"
            />
        <Constraint
            android:id="@id/liked_subject_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            />
        <Constraint
            android:id="@id/comment_bubble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            motion:layout_constraintBottom_toBottomOf="@id/motion_photo_view"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="0"
            />
        <Constraint
            android:id="@id/send_like_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:scaleY="0.5"
            android:scaleX="0.5"
            motion:layout_constraintTop_toBottomOf="@id/motion_photo_view"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="-1"
            />
        <Constraint
            android:id="@id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:scaleY="0.5"
            android:scaleX="0.5"
            motion:layout_constraintTop_toBottomOf="@id/send_like_button"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="-1"
            />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/likedPhoto">
        <Constraint
            android:id="@id/motion_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:progress="1" />
        <Constraint
            android:id="@id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toBottomOf="@id/motion_header"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:id="@id/motion_photo_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="1"
            />
        <Constraint
            android:id="@id/like_blur"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/grayLight"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1"
            />
        <Constraint
            android:id="@id/liked_subject_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1"
            />
        <Constraint
            android:id="@id/comment_bubble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            motion:layout_constraintTop_toBottomOf="@id/motion_photo_view"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="1"
            />
        <Constraint
            android:id="@id/send_like_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:scaleY="1"
            android:scaleX="1"
            motion:layout_constraintTop_toBottomOf="@id/motion_photo_view"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="1"
            />
        <Constraint
            android:id="@id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:scaleY="1"
            android:scaleX="1"
            motion:layout_constraintTop_toBottomOf="@id/send_like_button"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="1"
            />
    </ConstraintSet>

</MotionScene>
